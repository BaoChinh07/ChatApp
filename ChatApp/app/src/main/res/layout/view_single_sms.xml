<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civAvatarUserOne"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/tvSmsUserOne"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSmsUserOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sms_user_number_one"
        android:inputType="textLongMessage|textMultiLine"
        android:maxWidth="291dp"
        android:minWidth="50dp"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        android:text="@string/text_message"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/civAvatarUserOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="wrap_content"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/tvTimeMessageUserOne"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:text="@string/text_time"
        android:textSize="12.25sp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/tvSmsUserOne"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsUserOne"
        app:layout_constraintWidth="wrap_content" />

    <TextView
        android:id="@+id/tvSmsUserTwo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/sms_user_number_two"
        android:inputType="textLongMessage|textMultiLine"
        android:maxWidth="341dp"
        android:minWidth="50dp"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        android:text="@string/text_message"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSmsUserOne"
        app:layout_constraintWidth="wrap_content"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/tvTimeMessageUserTwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:text="@string/text_time"
        android:textSize="12.25sp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/tvSmsUserTwo"
        app:layout_constraintTop_toBottomOf="@+id/tvSmsUserTwo"
        app:layout_constraintWidth="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>